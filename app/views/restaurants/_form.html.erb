<%= simple_form_for(restaurant) do |f| %>
  <%= f.input :name, placeholder: "What is the name ?" %>
  <%= f.input :address, placeholder: "Where is the restaurant ?" %>
  <%= f.input :phone_number, placeholder: "Phone number ?" %>
  <%= f.input :category, placeholder: "Choose between ( chinese, italian, japanese, french and belgian )" %>
  <%= f.submit "Add", class: "btn btn-primary" %>
<% end %>
